		System.out.println("##Help us to keep INDORE No.1");
		}
	  else if(km<=20)
	  {
		price=15;  
		System.out.println("Price            = "+price+"Rs.");
		System.out.println("##Thank you, Happy Journey");
		System.out.println("##Help us to keep INDORE No.1");
		}
	  else if(km<=25)
