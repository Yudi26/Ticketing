package Welc;
import java.io.*;
import java.util.Scanner;
/**
 *
 * @author Yogesh Bhatt
 */ 
 class Welcome
{
  int i=1000;
  Scanner s=new Scanner (System.in);
  public void wel()
  {
   System.out.println("welcome to ibus");
  }
  public void mob()
  {
   System.out.println("Enter your mobile number");
   String mob=s.next();
 
    if(mob.length()==10)
    {  
     System.out.println("Your mobile is accepted successfully");
    }
  else
  {
    System.out.println("invalid mobile number");
    System.exit(0);//exit program
  }
 }
  public void name() throws InterruptedException
  {
	  String nm;
   System.out.print("Enter your full name    = ");
   Scanner p=new Scanner(System.in); 
   nm=p.nextLine();
   System.out.println("Welcome "+nm);
    
    }
  
  public void tok() throws InterruptedException
  {
   i++;
   System.out.println("TOKEN NO."+i);

  }
}
class Trip extends Welcome
{
 int n,price;
 int choice;
 int Total;

  public void choose() throws InterruptedException
  {
   System.out.println("Choose Token/online");
   String opt=s.next();

   if(opt.equals("token"))
    {
     wel();
     tok();
     ch();
     Dist();
     cond();
    }
   else if(opt.equals("online"))
    {
     name();
     mob();
     ch();
     Dist();
     cond();
    }
  } 

  void ch() throws InterruptedException
 {	 
	  String Src;  
System.out.print("Enter  Source Station         = ");
Src=s.next();
System.out.print("Enter  Destination Station    = ");
String Dst=s.next();

 }
  void Dist ()
